generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
}

model Movie {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  overview     String
  rating       Float
  posterPath   String?
  releaseDate  DateTime
  createdAt    DateTime @default(now())

  @@map("movies")
}
